<section id="page-banner" class="pt-105 pb-110 bg_cover" data-overlay="8" style="background-image: url(/images/page-banner-2.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-banner-cont">
                    <h2>Your Certificates</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="/Customer/Certificate/List">Certificates</a></li>
                        </ol>
                    </nav>
                </div>  <!-- page banner cont -->
            </div>
        </div> <!-- row -->
    </div> <!-- container -->
</section>

<!--====== PAGE BANNER PART ENDS ======-->

<section id="event-page" class="pt-90 pb-120 gray-bg">
    <div class="container">
        <div class="row">
            @foreach (var course in Model.Passed)
            {
                <div class="col-lg-6">
                    <div class="singel-event-list mt-30">
                        <div class="event-thum">
                            <img src="@course.ThumbUrl" alt="Event">
                        </div>
                        <div class="event-cont">
                            <a asp-page="Detail" asp-route-id="@course.Id">
                                <h4>@course.Name</h4>
                            </a>
                            <span class="pb-2"><b style="color: black;">Level:</b> @course.Level</span>
                            <span><b style="color: black;">Material:</b> @course.Material</span>
                            <span><b style="color: black;">Topic:</b> @course.Topic.Name</span>
                        </div>
                    </div>
                </div>
            }

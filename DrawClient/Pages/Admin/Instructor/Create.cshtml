@page
@model DrawClient.Pages.Admin.Instructor.CreateModel
@{
    Layout = "_LayoutAdmin";
}
<partial name="_Notification" />
<section id="corses-singel" class="pt-20 pb-20 gray-bg">
    <div class="container">
        <h2 class="mb-5">Create new Instructor</h2>
        <div class="create-section">
            <form method="post" class="row" enctype="multipart/form-data">
                <div class="col-md-6 justify-content-center">
                    <div class="login__field">
                        <div class="text-danger" asp-validation-summary="All"></div>
                    </div>
                    <div class="form-container" >
                        <h5 class="form-label mb-2">Name</h5>
                        <input asp-for="Instructor.Name" class="form-control" type="text" placeholder="Name length from 3 to 50"  />
                    </div>
                    <div class="form-container " style="margin:20px 0 0 0">
                        <h5 class="form-label mb-2">Email</h5>
                        <input asp-for="Instructor.Email" class="form-control" type="email" placeholder="Email length from 3 to 50" />
                    </div>
                    <div class="form-container" style="margin:20px 0 0 0">
                        <h5 class="form-label my-2">Description</h5>
                        <textarea asp-for="Instructor.Description" class="form-control mb-2" type="text"
                                  placeholder="Course description goes here..." rows="8"></textarea>
                    </div>
                    <div class="form-container " style="margin:20px 0 0 0">
                        <h5 class="form-label mb-2">Password</h5>
                        <input asp-for="Instructor.Password" class="form-control" type="password"  />
                    </div>
                    <div class="form-container " style="margin:20px 0 0 0">
                        <h5 class="form-label mb-2">Confirm Password</h5>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    </div>
                    <div class="justify-content-end mb-1" style="float:right;margin: 20px 0 0 0">
                        <button type="submit" class="btn tbl-exam">Add Instructor</button>
                    </div>                   
                </div>
            </form>
        </div>
    </div>
</section>
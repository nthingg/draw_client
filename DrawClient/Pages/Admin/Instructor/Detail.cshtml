@page
@model DrawClient.Pages.Admin.Instructor.DetailModel
@{
    Layout = "_LayoutAdmin";
}
<partial name="_Notification" />
<section id="corses-singel" class="pt-20 pb-20 gray-bg">
    <div class="d-flex justify-content-around mt-5">
        <div class="border col-md-3">
            <div class="tbl-exam p-3">
                <h2 class="tbl-exam">Instructor Info</h2>
            </div>
            <div class="m-3">
                <div class="card">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Name:</dt>
                            <dd class="col-sm-9">@(Model.instructor.Information == null || Model.instructor.Information.Name == null ? "No data" : Model.instructor.Information.Name)</dd>
                            <dt class="col-sm-3">Phone:</dt>
                            <dd class="col-sm-9">@(Model.instructor.Information == null || Model.instructor.Information.Phone == null ? "No data" : Model.instructor.Information.Phone)</dd>
                            <dt class="col-sm-3">Email:</dt>
                            <dd class="col-sm-9">@(Model.instructor.Information == null || Model.instructor.Information.Email == null ? "No data" : Model.instructor.Information.Email)</dd>
                            <dt class="col-sm-3">Description:</dt>
                            <dd class="col-sm-9">@(Model.instructor == null || Model.instructor.Description == null ? "No data" : Model.instructor.Description)</dd>
                        </dl>
                        <div class="row justify-content-around">
                            <a asp-page="/Admin/Instructor/Block" asp-route-id="@Model.instructor.Id" class="btn btn-danger">@(Model.instructor.Information.IsBlocked ? "Unblock" : "Block")</a>
                            <a asp-page="/Admin/Instructor/Update" asp-route-id="@Model.instructor.Id" class="btn btn-secondary">Update</a>
                        </div>

                    </div>

                </div>
                <a href="@Url.Content("~/Admin/Instructor/List")" class="btn tbl-exam" style="float: right; margin: 20px 60px 20px 00px">Back to instructor list</a>
            </div>
        </div>


        <div class="col-md-8 border">
            <div class="tbl-exam p-3 text-white ">
                <h2 class="tbl-exam">Course List</h2>
            </div>

            @if (Model.courses.Items.Count() == 0)
            {
                <h3 class="draw-header p-3 text-center">No Data</h3>
            }
            else
            {
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="courses-grid" role="tabpanel" aria-labelledby="courses-grid-tab">
                        <div class="row">
                            @foreach (var obj in Model.courses.Items)
                            {
                                <div class="col-lg-4 col-md-6">
                                    <div class="singel-course mt-30">
                                        <div class="thum">
                                            <div class="image">
                                                <img src=@(obj.ThumbUrl == null? "https://t4.ftcdn.net/jpg/04/73/25/49/360_F_473254957_bxG9yf4ly7OBO5I0O5KABlN930GwaMQz.jpg": obj.ThumbUrl) alt="Course">
                                            </div>
                                            <div class="price">
                                                <span>@obj.OriginalPrice</span>
                                            </div>
                                        </div>
                                        <div class="cont">
                                            <a href="#"><h4>@obj.Name</h4></a>
                                        </div>
                                    </div> <!-- singel course -->
                                </div>
                            }
                        </div> <!-- row -->
                    </div>
                </div>
            }
        </div>
    </div>
</section>